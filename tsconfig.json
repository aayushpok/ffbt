{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/services/tslint/tslint.json",
    "src/services/stylelint/stylelint.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
